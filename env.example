# Configuración de la base de datos
# Parámetros del pool de conexiones incluidos en la URL:
# - connection_limit: Número máximo de conexiones en el pool (default: 10)
# - pool_timeout: Tiempo máximo de espera para obtener una conexión (default: 10s)
# - acquire_timeout: Tiempo máximo para adquirir una conexión (default: 60s)
# - timeout: Tiempo máximo de inactividad antes de cerrar conexión (default: 600s)
DATABASE_URL="mysql://usuario:password@localhost:3306/nombre_base_datos?connection_limit=20&pool_timeout=20&acquire_timeout=60&timeout=600"

# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de JWT
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info 